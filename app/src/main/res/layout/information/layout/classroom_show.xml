<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <!--top-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_top_height"
        android:orientation="horizontal"
        android:background="@color/colorTheme">

        <!--返回按钮-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_back"
            android:id="@+id/exam_show_back"
            android:layout_gravity="center"
            android:onClick="handleReturn"/>

        <!--显示名称-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/exam_show_top"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="@string/show_classroom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="80dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorGreyBG">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="搜索"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_place"
            android:text=""/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:columnCount="5"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/button_place">
    </GridLayout>


</LinearLayout>