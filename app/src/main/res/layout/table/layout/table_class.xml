<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/main_place"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--top-->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="vertical"
        android:background="#7fab96c5"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AlertDialog.AppCompat.Light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id = "@+id/term_info"
            android:text="一"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id = "@+id/date_info"
            android:text="一"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px">
    <TextView
        android:layout_width="200px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="节/周"/>
    <cn.starrah.thu_course_helper.BindableScrollView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:id='@+id/scroll_top'>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/monday_top"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id = "@+id/monday_date"
                    android:text="18"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tuesday_top"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="二"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id = "@+id/tuesday_date"
                    android:text="19"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wednesday_top"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="三"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id = "@+id/wednesday_date"
                    android:text="20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thursday_top"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="四"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id = "@+id/thursday_date"
                    android:text="21"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/friday_top"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="五"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id = "@+id/friday_date"
                    android:text="22"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/saturday_top"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="六"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id = "@+id/saturday_date"
                    android:text="23"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sunday_top"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="日"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id = "@+id/sunday_date"
                    android:text="24"/>
            </LinearLayout>
        </LinearLayout>
    </cn.starrah.thu_course_helper.BindableScrollView>
    </LinearLayout>

<!--    TODO 把提示文字替换为从timeRule中动态加载，不应该写死。
从SchoolTimeRule.getBigByNumber可以拿到每个大节的数据对象，内有方法可获得开始和结束时间。 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!--左侧"节数"布局,左右滑动的时候不动-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/left_view_layout"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/class_1"
                    android:layout_width="match_parent"
                    android:layout_height="600px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="第一\n大节\n08:00-\n09:35"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/class_2"
                    android:layout_width="match_parent"
                    android:layout_height="600px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="第二\n大节\n09:50-\n12:15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/class_3"
                    android:layout_width="match_parent"
                    android:layout_height="600px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="第三\n大节\n13:30-\n15:05"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/class_4"
                    android:layout_width="match_parent"
                    android:layout_height="600px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="第四\n大节\n15:20-\n16:55"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/class_5"
                    android:layout_width="match_parent"
                    android:layout_height="600px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="第五\n大节\n17:10-\n18:45"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/class_6"
                    android:layout_width="match_parent"
                    android:layout_height="600px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="第六\n大节\n19:20-\n21:45"/>
                </LinearLayout>
            </LinearLayout>
        <cn.starrah.thu_course_helper.BindableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_bottom">
            <!--课程表-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--星期一到星期天的7列-->
                <LinearLayout
                    android:id="@+id/monday_list"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/monday_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tuesday_list"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/tuesday_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wednesday_list"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/wednesday_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thursday_list"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/thursday_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/friday_list"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/friday_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/saturday_list"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/saturday_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sunday_list"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/sunday_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="1dp"/>
                </LinearLayout>
            </LinearLayout>
        </cn.starrah.thu_course_helper.BindableScrollView>
            </LinearLayout>
    </ScrollView>
</LinearLayout>