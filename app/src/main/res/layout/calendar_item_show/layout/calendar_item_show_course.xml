<?xml version="1.0" encoding="utf-8"?>
<!--类别是课程-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--教师-->
    <LinearLayout style="@style/layout">
        <TextView style="@style/define_show"
            android:drawableLeft="@drawable/icon_item"
            android:text ="@string/item_teacher"/>
        <TextView style="@style/input"
            android:id="@+id/item_show_teacher"/>
    </LinearLayout>

    <!--课程号-->
    <LinearLayout style="@style/layout">
        <TextView style="@style/define_show"
            android:drawableLeft="@drawable/icon_item"
            android:text ="@string/item_course_id"/>
        <TextView style="@style/input"
            android:id="@+id/item_show_course_id"/>
    </LinearLayout>

</LinearLayout>