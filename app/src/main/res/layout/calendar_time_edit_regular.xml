<?xml version="1.0" encoding="utf-8"?>
<!--类型是定期-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--周-->
    <LinearLayout style="@style/layout">
        <TextView style="@style/define"
            android:drawableLeft="@drawable/icon_date"
            android:text ="@string/time_week"/>
        <TextView style="@style/input"
            android:id="@+id/time_edit_week"/>
    </LinearLayout>

    <!--星期-->
    <LinearLayout style="@style/layout">
        <TextView style="@style/define"
            android:drawableLeft="@drawable/icon_day"
            android:text ="@string/time_day"/>
        <Spinner style="@style/input"
            android:id="@+id/time_edit_day"/>
    </LinearLayout>

</LinearLayout>