<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        app:key="login_status"
        app:summary=""
        app:title="@string/settings_not_login"
        app:defaultValue="0" />
    <!--        android:layout=""-->
<!--
注：现在的Preference的默认view，是只显示登录名（学号）、已登录状态、保存密码状态的。
但是可以使用android:layout=对应的layout文件，来指定这个preference对应的view的。
之后可以用这个方法实现显示姓名、头像等等。
-->

    <Preference
        app:key="sync_XK_btn"
        app:summary=""
        app:title="@string/settings_sync_XK" />

    <SwitchPreferenceCompat
        app:key="sync_learnx_homeworks"
        app:title="@string/settings_sync_learnx"
        app:defaultValue="false"
        app:enabled="false" />

    <ListPreference
        app:key="term_id"
        app:title=""
        app:summary="@string/settings_term_remind" />

    <ListPreference
        app:entries="@array/table_show_type"
        app:entryValues="@array/table_show_type"
        app:key="course_show_type"
        app:title="@string/settings_course_show_type"
        app:defaultValue="@string/settings_course_show_type_course"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:entries="@array/table_show_day_number"
        app:entryValues="@array/table_show_day_number"
        app:key="course_show_days"
        app:title="@string/settings_course_show_days"
        app:defaultValue="@string/table_show_day_number_5d"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:entries="@array/table_show_day_number"
        app:entryValues="@array/table_show_day_number"
        app:key="time_show_days"
        app:title="@string/settings_time_show_days"
        app:defaultValue="@string/table_show_day_number_5d"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreferenceCompat
        app:key="stay_notice"
        app:title="@string/settings_stay_notice"
        app:defaultValue="false" />

</PreferenceScreen>