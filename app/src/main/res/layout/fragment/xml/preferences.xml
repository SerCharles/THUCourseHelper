<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Preference
        app:defaultValue="0"
        app:key="login_status"
        app:summary=""
        app:title="@string/status_not_login" />
    <!--        android:layout=""-->
    <!--
    注：现在的Preference的默认view，是只显示登录名（学号）、已登录状态、保存密码状态的。
    但是可以使用android:layout=对应的layout文件，来指定这个preference对应的view的。
    之后可以用这个方法实现显示姓名、头像等等。
    -->

    <Preference
        app:key="sync_XK_btn"
        app:summary=""
        app:title="@string/settings_sync_XK" />

    <!--    <SwitchPreferenceCompat-->
    <!--        app:key="sync_learnx_homeworks"-->
    <!--        app:title="@string/settings_sync_learnx"-->
    <!--        app:defaultValue="false"-->
    <!--        app:enabled="false" />-->

    <MultiSelectListPreference
        app:enabled="false"
        app:entries="@array/hmex_options"
        app:entryValues="@array/hmex_options"
        app:key="sync_hmex"
        app:title="@string/settings_sync_hmex_title" />

    <ListPreference
        app:key="term_id"
        app:summary="@string/settings_term_remind"
        app:title="" />

    <ListPreference
        app:defaultValue="@string/settings_course_show_type_course"
        app:entries="@array/table_show_type"
        app:entryValues="@array/table_show_type"
        app:key="course_show_type"
        app:title="@string/settings_course_show_type"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@string/table_show_day_number_5d"
        app:entries="@array/table_show_day_number"
        app:entryValues="@array/table_show_day_number"
        app:key="course_show_days"
        app:title="@string/settings_course_show_days"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@string/table_show_day_number_5d"
        app:entries="@array/table_show_day_number"
        app:entryValues="@array/table_show_day_number"
        app:key="time_show_days"
        app:title="@string/settings_time_show_days"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@string/settings_stay_notice_no"
        app:entries="@array/stay_notice_values"
        app:entryValues="@array/stay_notice_values"
        app:key="stay_notice"
        app:title="@string/settings_stay_notice_title"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@string/bg_blank"
        app:entries="@array/background_choices"
        app:entryValues="@array/background_choices"
        app:key="background_choice"
        app:title="@string/background_choice_title" />
    <!--    <SwitchPreferenceCompat-->
    <!--        app:defaultValue="false"-->
    <!--        app:key="stay_notice"-->
    <!--        app:title="@string/settings_stay_notice_title" />-->

    <ListPreference
        app:defaultValue="dull"
        app:entries="@array/backup_titles"
        app:entryValues="@array/backup_titles"
        app:key="dull_backup"
        app:title="@string/backup_outter_title" />

    <Preference
        app:key="dull_feedback"
        app:title="@string/feedback_title" />

    <Preference
        app:key="check_version"
        app:summary=""
        app:title="@string/settings_check_version" />

</PreferenceScreen>